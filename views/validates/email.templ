package validates

import ()

templ ValidateEmail(isEmailValid bool) {
	if isEmailValid {
		<div id="email-status">
			<span>🍩</span>
		</div>
	} else {
		<div id="email-status" class="tooltip tooltip-left" data-tip="Not Valid Email Address">
			<p class="mt-2 text-sm text-red-600 dark:text-red-500"><span class="font-medium">Oh, snapp!</span> you input the wrong email.</p>
		</div>
	}
}
